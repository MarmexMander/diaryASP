@model IEnumerable<WorkDiary.Models.Event>

@{
    ViewData["Title"] = "AllEvents";
}

<h1>Events</h1>

<p>
    <a asp-action="CreateEvent">Create New Event</a>
</p>
<table class="table">
    <thead>
        <tr align="center">
            <th>
                ID
            </th>
            <th>
               Name
            </th>
            <th>
                Type
            </th>
            <th>
                Duration
            </th>
            <th>
                Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr align="center">
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameEvent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeEvent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DurationEvent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeEvent)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditEvent", new { id=item.Id }) |
                @Html.ActionLink("Details", "EventUsers", new { id=item.Id }) |
                @Html.ActionLink("Delete", "DeleteEvent", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
