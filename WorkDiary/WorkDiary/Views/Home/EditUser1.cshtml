@model IEnumerable<WorkDiary.Models.User>
@{
    ViewData["Title"] = "Edit User";
}
<h1>Edit User</h1>
@foreach (var user in Model)
{
    if (@ViewBag.Email == user.Email)
    {
        <form method="post" class="form-horizontal" role="form">
            <p>Fill the fields:</p>
            <div class="form-group">
                <label for="FullName" class="col-md-2 control-label">Full Name:</label>
                <div class="col-md-4">
                    <input type="text" name="FullName" class="form-control" value=@user.FullName />
                </div>
            </div>

            <div class="form-group">
                <label for="email" class="col-md-2 control-label">E-mail:</label>
                <div class="col-md-4">
                    <input type="text" name="email" class="form-control" value=@user.Email />
                </div>
            </div>

            <div class="form-group">
                <label for="AccessLevel" class="col-md-2 control-label">Access Level:</label>
                <div class="col-md-4">
                    <input type="text" name="AccessLevel" class="form-control" value=@user.AccessLevel />
                </div>
            </div>

            <div class="form-group">
                <label for="BirthdTime" class="col-md-2 control-label">Birthd Date:</label>
                <div class="col-md-4">
                    <input type="datetime" name="BirthdTime" class="form-control" @*value=@user.BirthdTime*@ />
                </div>
            </div>

            <div class="form-group">
                <label for="passHash" class="col-md-2 control-label">Password:</label>
                <div class="col-md-4">
                    <input type="text" name="passHash" class="form-control" value=@user.PassHash />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Submit" />
                </div>
            </div>
        </form>
    }
}

