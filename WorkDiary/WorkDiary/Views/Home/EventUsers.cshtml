@model WorkDiary.Models.Event

@{
    ViewData["Title"] = "EventUsers";
}

<h1>Event Users</h1>

<table class="table">
    <thead>
        <tr align="center">
            <th>
                ID
            </th>
            <th>
                Email
            </th>
            <th>
                Full Name
            </th>
            <th>
                Access Level
            </th>
            <th>
                Date of Birthd
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ShowedUpUsers)
        {
            @if (Model.Users.Contains(item))
            {
                <tr style="background-color:lightgreen" align="left">
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td align="left">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccessLevel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthdTime)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "UserInfo", new { id = item.Id }) 
                    </td>
                </tr>

            }
            else if (!Model.Users.Contains(item))
            {
                <tr align="left">
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td align="left">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccessLevel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthdTime)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "UserInfo", new { id = item.Id })
                    </td>
                </tr>

            }
        }
    </tbody>
</table>
