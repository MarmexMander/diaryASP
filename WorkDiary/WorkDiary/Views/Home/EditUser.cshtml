@model WorkDiary.Models.UserViewModel

@{
    ViewData["Title"] = "EditUser1";
}

<h1>EditUser1</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Model.Email" class="control-label"></label>
                <input asp-for="Model.Email" class="form-control" />
                <span asp-validation-for="Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.Id" class="control-label">ID</label>
                <input asp-for="Model.Id" class="form-control" disabled />
                <span asp-validation-for="Model.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.FullName" class="control-label">Full Name</label>
                <input asp-for="Model.FullName" class="form-control" />
                <span asp-validation-for="Model.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.AccessLevel" class="control-label">Access Level</label>
                @if (@ViewBag.AccessLevel < 2)
                {
                    <input asp-for="Model.AccessLevel" class="form-control" disabled />
                }
                else
                {
                    <input asp-for="Model.AccessLevel" class="form-control" />
                }
                <span asp-validation-for="Model.AccessLevel" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Model.BirthdTime" class="control-label">Date of Birthd</label>
                <input asp-for="Model.BirthdTime" class="form-control" />
                <span asp-validation-for="Model.BirthdTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.Position.PositionId" class="control-label"></label>
                <select asp-for="Model.Position.PositionId" class="form-control">
                    @foreach(Position p in @Model.Positions)
                    {
                        <option value=@p.PositionId>@p.Name</option>
                    }
                </select>
                <span asp-validation-for="Model.Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.PassHash" class="control-label">Password</label>
                <input asp-for="Model.PassHash" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Model.Status" class="control-label">Status</label>
                <input asp-for="Model.Status" class="form-control" />
                <span asp-validation-for="Model.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        </div>
    </div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}