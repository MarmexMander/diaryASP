@model IEnumerable<WorkDiary.Models.User>

@{
    ViewData["Title"] = "AllUsers";
}
@Html.ActionLink("Add User", "CreateUser")

<table class="table">
    <thead>
        <tr align="center">
            <th>
                ID
            </th>
            <th >
                Email
            </th>
            <th>
                Full Name
            </th>
            <th>
                Access Level
            </th>
            <th>
                Position
            </th>
            <th>
                Date of Birthd
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr  align="center">
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td align="left">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td >
                @Html.DisplayFor(modelItem => item.AccessLevel)
            </td>
            <td >
                @Html.DisplayFor(modelItem => item.Position.Name)
            </td>
            <td >
                @Html.DisplayFor(modelItem => item.BirthdTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditUser", new {  id=item.Id  }) |
                @Html.ActionLink("Details", "UserInfo", new {  user=item  }) |
                @Html.ActionLink("Delete", "DeleteUser", new {  id=item.Id  })
            </td>
        </tr>
}
    </tbody>
</table>